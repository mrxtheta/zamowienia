<div class="hero-unit">

<h1>Edycja zamowienia</h1>

<%= form_for(:zamowienie, :url => {:action => 'aktualizuj', :id => @zamowienie.id}) do |pole|%>

<table class="table table-striped">
<tr>
	<th><%= pole.label(:klient_id) %></th>
		</tr>
		<tr>
		<th><%= pole.label(:status) %></th>
		<td><%= pole.text_field(:status) %></td>
		</tr>
		<tr>

		<th><%= pole.label(:wartosc) %></th>
		</tr>

		<tr>
		<th><%= pole.label(:wyslaneczyniem, "Czy zamowienie zostalo wyslane?") %></th>
		<td><%= pole.check_box(:wyslaneczynie) %></td>
		</tr>

		<tr>

		<th><%= pole.label(:zawartosc) %></th>
		</tr>


	</table>

<div style="test-align:center;">
<%= link_to("Wracaj", {:action => 'index'}, :class => 'btn btn-mini btn-warning')%>
<%= submit_tag("Aktualizuj", :class => 'btn btn-mini btn-primary ')%>
</div>

	<div>
		
		</div>

	<% end %>
